{
  "printWidth": 120,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": [".eslintrc.js", "webpack.config.js"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.html",
      "options": {
        "tabWidth": 2,
        "bracketSameLine": true,
        "singleAttributePerLine": true
      }
    },
    {
      "files": "*.scss",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
